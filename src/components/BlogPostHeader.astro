---
import { Image } from "astro:assets";

const { category, title, author, image } = Astro.props;
---

<header>
    <div class="container">
        <small>
            <a href={`/category/${category}`} class="badge">{category}</a>
        </small>
        <h1 class="h2">{title}</h1>
        <p>
            by <a href=`/author/${author}`>{author}</a>
            {
                new Date().toLocaleDateString("en-US", {
                    timeZone: "IST",
                })
            }
        </p>
    </div>
    <Image
        src={image.src}
        alt={image.alt}
        width="1200"
        height="600"
        format="avif"
        quality={80}
        class="hero-image"
    />
</header>
